block variables

doctype html
html(lang="en")
    head
        title= title
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='description', content='Some description')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='/css/vendor/bulma.min.css')
        link(rel='stylesheet', href='/css/style.css')
    body
        section.section
            .container
                if isZoom
                    .is-hidden#main
                        block content
                else
                    h1.title= title
                    h2.subtitle You're viewing your Immersive Zoom App through the browser.&nbsp;
                        a.is-underlined(href=`${installURL}`) Click Here
                        | &nbsp;to install your app in Zoom
        if isZoom
            canvas#uiCanvas
            script(src='js/vendor/zoom-apps-js-sdk.0.13.0.js' type='application/javascript')
            script(src='/js/index.js' type='module')
    noscript Javascript must be enabled to use this application
